<div class="max-w-4xl mx-auto p-6">
  <!-- Profile Header -->
  <div class="bg-white rounded-lg shadow-md p-6 mb-6">
    <div class="flex items-start space-x-6">
      <div class="flex-shrink-0">
        <% if @user.profile_image.attached? %>
          <%= image_tag @user.profile_image, class: "w-24 h-24 rounded-full object-cover" %>
        <% else %>
          <div class="w-24 h-24 rounded-full bg-gray-300 flex items-center justify-center">
            <span class="text-gray-600 text-2xl font-bold"><%= @user.username.first.upcase %></span>
          </div>
        <% end %>
      </div>
      
      <div class="flex-1">
        <div class="flex items-center justify-between">
          <h1 class="text-2xl font-bold text-gray-900"><%= @user.display_name %></h1>
          <% if current_user == @user %>
            <%= link_to "Edit Profile", edit_user_path(@user), 
                class: "px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700" %>
          <% end %>
        </div>
        
        <div class="mt-2 flex items-center space-x-4 text-sm text-gray-600">
          <span class="capitalize"><%= @user.skill_level %> level</span>
          <span><%= pluralize(@user.posts_count, 'post') %></span>
          <span><%= pluralize(@user.followers_count, 'follower') %></span>
          <span><%= @user.following_count %> following</span>
        </div>
        
        <% if @user.bio.present? %>
          <p class="mt-3 text-gray-700"><%= @user.bio %></p>
        <% end %>
        
        <% if @user.email_verified? %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 mt-2">
            âœ“ Verified
          </span>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Posts Grid -->
  <div class="bg-white rounded-lg shadow-md p-6">
    <h2 class="text-xl font-semibold mb-4">Posts</h2>
    
    <% if @posts.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @posts.each do |post| %>
          <div class="bg-gray-50 rounded-lg overflow-hidden">
            <% if post.images.attached? %>
              <%= link_to post_path(post) do %>
                <%= image_tag post.images.first, class: "w-full h-48 object-cover" %>
              <% end %>
            <% end %>
            
            <div class="p-4">
              <h3 class="font-medium text-gray-900 mb-2">
                <%= link_to post.title, post_path(post), class: "hover:text-indigo-600" %>
              </h3>
              
              <p class="text-sm text-gray-600 mb-2"><%= truncate(post.description, length: 100) %></p>
              
              <div class="flex items-center justify-between text-xs text-gray-500">
                <span><%= time_ago_in_words(post.created_at) %> ago</span>
                <span><%= pluralize(post.likes.count, 'like') %></span>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500 text-center py-8">No posts yet.</p>
    <% end %>
  </div>
</div>
